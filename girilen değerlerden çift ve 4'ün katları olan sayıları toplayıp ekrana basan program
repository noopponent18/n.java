import java.util.Scanner;

public class Test {
    public static void main(String[] args) {
       int number, total = 0;
       Scanner scan = new Scanner(System.in);

       do {
           System.out.print("Bir SayÄ± Giriniz: ");
           number = scan.nextInt();
           if (number %4 == 0 ){
               total += number;
           }
       }while (number %2 !=1);
        System.out.println(total);
    }
}
